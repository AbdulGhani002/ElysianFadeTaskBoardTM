<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elysian Fade Task Board</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Elysian Fade Task Board</h1>
    </header>
    <div class="container">
        <div class="task-board">
            <div class="task-column">
                <h2>To Do</h2>
                <div id="todoTasks" class="task-list">
                    <!-- To Do tasks will be loaded here -->
                </div>
            </div>
            <div class="task-column">
                <h2>In Progress</h2>
                <div id="inProgressTasks" class="task-list">
                    <!-- In Progress tasks will be loaded here -->
                </div>
            </div>
            <div class="task-column">
                <h2>Done</h2>
                <div id="doneTasks" class="task-list">
                    <!-- Done tasks will be loaded here -->
                </div>
            </div>
        </div>
        <button id="openTaskModal">Add Task</button>
    </div>

    <!-- Task Modal -->
    <div id="taskModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <form id="taskForm">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <label for="description">Description:</label>
                <textarea id="description" name="description" required></textarea>
                <label for="dueDate">Due Date:</label>
                <input type="date" id="dueDate" name="dueDate" required>
                <label for="priority">Priority:</label>
                <select id="priority" name="priority" required>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
                <button type="submit">Save Task</button>
            </form>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>
